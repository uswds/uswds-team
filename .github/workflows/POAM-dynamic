name: Monthly Security POAM
on:
  pull_requests:
  workflow_dispatch:

jobs:
  create_issue:
    name: Create monthly POAM issue
    runs-on: ubuntu-latest
    permissions:
      issues: write
    steps:
      - name: Create monthly POAM issue
        run: |
          echo "DATE=$(date '+%B %y)" >> ${GITHUB_ENV}
          new_issue_url=$(gh issue create \
            --title "$TITLE" \
            --assignee "$ASSIGNEES" \
            --label "$LABELS" \
            --body "$BODY")
          
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          GH_REPO: ${{ github.repository }}
          TITLE: POAM - ${{env.DATE}}
          LABELS: "Role: Dev,Type: Task"
          BODY: |
            # Summary

            POAM for ${{env.DATE}}

            - [ ] USWDS
            - [ ] USWDS-Site
            - [ ] USWDS-Sandbox
            - [ ] USWDS-Next
            - [ ] USWDS-Compile
            - [ ] USWDS-Tutorial
            - [ ] Public Sans
